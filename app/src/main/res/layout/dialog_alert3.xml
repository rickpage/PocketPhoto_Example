<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/idAlert"  
    android:orientation="vertical"
    android:background="#00000000"
    android:minWidth="150dip"
    android:minHeight="100dip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">    
    
<!-- Start of Header Text -->
	<FrameLayout android:background="@drawable/dialog_alert1_top_bg"
	  	android:layout_width="fill_parent"
	  	android:layout_height="46dp"
	  	android:orientation="horizontal"
	  	android:paddingTop="10px"
   		android:paddingLeft="10px"
		android:paddingRight="10px" >
        <TextView android:id="@+id/idCaption"
           android:textSize="10dp"
           android:textColor="#FF333333"
           android:layout_width="wrap_content" 
           android:layout_height="wrap_content" 
           android:layout_margin="3dp"
           android:layout_gravity="center"/>
        <Button 
           android:id="@+id/idReSearch"
           android:layout_width="35dp" 
           android:layout_height="30dp"
           android:layout_gravity="right|center_vertical" 
           android:layout_marginRight="10dp"
           android:background="@drawable/button_retry"/>
	</FrameLayout>
<!-- End of Header Text -->
   
<!-- start of body  -->
	<LinearLayout android:background="@drawable/dialog_alert1_body_bg"
	  	android:orientation="horizontal"
	  	android:gravity="center" 
		android:paddingBottom="10px"
	   	android:paddingLeft="10px"
		android:paddingRight="10px"
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content">
        <LinearLayout android:id="@+id/idBody"  
           android:orientation="vertical"
           android:layout_width="fill_parent" 
           android:layout_height="wrap_content"/>
	</LinearLayout>
<!-- end of body  -->

</LinearLayout>